{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-meta-helper": {
      "projectType": "library",
      "root": "projects/ng-meta-helper",
      "sourceRoot": "projects/ng-meta-helper/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ng-meta-helper/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-meta-helper/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ng-meta-helper/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-meta-helper/src/test.ts",
            "tsConfig": "projects/ng-meta-helper/tsconfig.spec.json",
            "karmaConfig": "projects/ng-meta-helper/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ng-meta-helper/**/*.ts",
              "projects/ng-meta-helper/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ng-meta-helper",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
